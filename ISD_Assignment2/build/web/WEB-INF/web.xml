<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>StoreServlet</servlet-name>
        <servlet-class>ISD.Assignment.Controller.StoreServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConnServlet</servlet-name>
        <servlet-class>ISD.Assignment.Controller.ConnServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>ISD.Assignment.Controller.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StoreAddServlet</servlet-name>
        <servlet-class>ISD.Assignment.Controller.StoreAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StoreRemoveServlet</servlet-name>
        <servlet-class>ISD.Assignment.Controller.StoreRemoveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StoreServlet</servlet-name>
        <url-pattern>/StoreServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConnServlet</servlet-name>
        <url-pattern>/ConnServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/SearchServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StoreAddServlet</servlet-name>
        <url-pattern>/StoreAddServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StoreRemoveServlet</servlet-name>
        <url-pattern>/StoreRemoveServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
